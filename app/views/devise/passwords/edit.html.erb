<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <h2>Change Your Password</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.hidden_field :reset_password_token %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New Password (min #{@minimum_password_length} characters)", class: "form-control" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm New Password", class: "form-control" %>
        <%= f.submit "Change my password", class: "form-control btn btn-default" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
