<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Sign Up</h1>
      <div class="row">
        <div class="col-xs-12 col-sm-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-control" %>
              <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password (min #{@minimum_password_length} characters)", class: "form-control" %>
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: "form-control"  %>
              <%= f.submit "Sign up", class: "form-control btn btn-default"  %>
            </div>
          <% end %>
        </div>
        <% if @user.errors.any? %>
        <div class="col-xs-9" id="error_explanation">
          <h4><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
