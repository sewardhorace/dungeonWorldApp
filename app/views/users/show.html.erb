<style>
.game-box {
  border: 1px solid #e8e8e8;
  padding: 15px;
  padding-bottom: 10px;
  margin-bottom: 10px;
  border-radius: 3px;
}
.game-box strong {
  margin-bottom: 0px;
}
.game-box small {
  color: #B2B2B2;
  padding-left: 10px;
}
.overflow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
</style>

<div class="container">
  <div class="row">
    <div class="hidden-xs col-sm-2">&nbsp;</div>
    <div class="col-xs-12 col-sm-8">
      <h3><%= @user.username %>'s games</h3>
      <%= render partial: "users_games", locals: {user: @user} %>
    </div>
  </div>
</div>
