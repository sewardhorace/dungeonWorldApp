<style>
.games td.overflow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300px;
}
</style>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h4>All Games</h4>
      <div class="table-responsive">
        <table class="table games">
            <tr>
              <th>Go</th>
              <th>GM</th>
              <th>Description</th>
              <th>Start Date</th>
              <th>Players</th>
              <th>Posts</th>
            </tr>
          <% @games.each do |g| %>
            <tr>
              <% if current_user.is_playing?(g.id) %>
                <td><%= link_to "Enter", game_path(g.id) %></td>
              <% else %>
                <td><%= link_to "View", game_path(g.id) %></td>
              <% end %>
              <td><%= link_to g.game_master.username, user_path(g.game_master) %></td>
              <td class="overflow"><%= g.description %></td>
              <td><%= g.timestamp %></td>
              <td><%= g.players.count %></td>
              <td><%= g.narigraphs.count %></td>
            </tr>
          <% end %>
        </table>
      </div>
      <%= link_to 'Start New Game', new_game_path, class: "btn btn-default" %>
      <div id="narigraphs-panel"></div>
    </div>
  </div>
</div>
