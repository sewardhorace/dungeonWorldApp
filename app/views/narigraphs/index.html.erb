<div id="main-container" class="container-fluid">
    <h1>Once upon a time...</h1>
      <div class="row">
        <div class="col-xs-3">Character Name:</div>
        <div class="col-xs-9">What Happens:</div>
      </div>


      <% @narigraphs.each do |n| %>
      <div class="row">
        <div class="col-xs-3"><%= n.character_name %></div>
        <div class="col-xs-9"><%= n.text %></div>
      </div>
      <% end %>

  <h3>What do you do?</h3>
    <%= form_for :narigraph, url: narigraphs_path do |f| %>
    <div>
      <%= f.label "Character Name:" %><br>
      <%= f.text_field :character_name %>
    </div>

    <div>
      <%= f.label "What do you do?" %><br>
      <%= f.text_area :text %>
    </div>

    <div class="btn-lg">
      <%= f.submit "Do it"%>
    </div>
  <% end %>
</div>
