.container-fluid#main-container
    %h1 Once upon a time...
    .table
        %table.table#narigraphs
            %th.col-xs-1 Character Name:
            %th.col-xs-11 What Happens:

            = render @narigraphs

    %h3 What do you do?
    = form_for(@narigraph, remote: true) do |f|
        -# - if @narigraph.errors.any?
        -#     #error_explanaton
        -#         %h2= pluralize(@narigraph.errors.count, "fuckup")+"prohibited this article from being saved:"
        -#         %ul
        -#             - @narigraph.errors.full_messages.each do |msg|
        -#                 %li= msg
        .form-group
            = f.label "Character Name:"
            = f.text_field :character_name, class: "form-control"
